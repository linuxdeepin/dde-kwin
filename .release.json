{
        "commit": {
                "quilt": false,
                "pkgver": "echo $(git tag | sort -V | tail -n1)'+g'$(git rev-parse --short HEAD);",
                "dist": "experimental"
        },
        "release": {
                "quilt": true,
                "pkgver": "git describe --abbrev=0 --tags %(ref)s",
                "dist": "unstable"
        },
        "release-candidate": {
                "quilt": true,
                "dist": "unstable"
        }
}
